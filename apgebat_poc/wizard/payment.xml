<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

	 <!-- vue formulaire -->
	    <record id="apgebat_poc_payment_wizard" model="ir.ui.view">
	      <field name="name">apgebat.poc.payment.wizard.form</field>
	      <field name="model" >apgebat.poc.payment.wizard</field>
	      <field name="arch" type="xml">
	        <form string="payment">
	          <sheet>
	          	<group col="2">
		          	<group col="2">
		          		<field name="mode" on_change="sql_bd_union()"/>
		            </group>
		        </group>
	            <footer>
	            	<button name="payment_wizard" string="Open payment"
                            type="object" class="oe_highlight" />
                     or
                    <button string="Cancel" class="oe_link" special="cancel"/>
	            </footer>
	          </sheet>
	        </form>
	      </field>
	    </record>

  	</data>
</openerp>